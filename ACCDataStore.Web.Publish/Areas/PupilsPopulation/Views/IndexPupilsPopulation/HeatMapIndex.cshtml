                                        <option value="0-1">Age between 0-1</option>
                                        <option value="0">Age 0</option>
                                        <option value="1">Age 1</option>
                                        <option value="2">Age 2</option>
                                        <option value="3">Age 3</option>
                                        <option value="4">Age 4</option>
                                        <option value="5">Age 5</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel">
                        <div class="panel-body">
                            <div class="row">
                                <div class="text-left" id="census-min">min %</div>
                                <div class="color-key "><span id="data-caret">&#x25c6;</span></div>
                                <div class="text-right" id="census-max">max %</div>
                            </div>
                        </div>
                    </div>
                    <div class="panel">
                        <div class="panel-body">
                            <div class="row">
                                <div id="data-box" class="col-md-12 text-center">
                                    <label id="data-label" for="data-value"></label>
                                    <span id="data-value"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>         <!-- row -->

        <div class="row">
            <div class="col-md-10">
                <div id="divinformationContainer" style="width: 100%;"></div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-10">
                <div id="divChartContainer" style="width: 100%;"></div>
            </div>
        </div>

    </div>
