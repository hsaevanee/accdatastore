                                </tr>
                                <tr>
                                    <td colspan="13" align="center">
                                        <input type="submit" class="btn btn-primary" name="calculateButton" value="Calculate" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    
}
                    </div>
                </div>
            </div>
        </div>

    </div> <!--container-->
