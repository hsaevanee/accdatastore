                                    <td><strong>2018</strong></td>
                                    <td><strong>2019</strong></td>
                                    <td><strong>2020</strong></td>
                                    <td><strong>2021</strong></td>
                                </tr>
                            @*</thead>*@
                            <tbody>
                                <tr>
                                    <td><strong>P1 Input</strong></td>
                                    @foreach (double data in Model.schObj.ListP1Input)
                                    {
                                        <td>@String.Format("{0:#,0.00}", @data)</td>
                                    }
                                </tr>
                                <tr>
                                    <td><strong>Pupils/Hhld</strong></td>
                                    @foreach (double data in Model.schObj.ListPupilsHhld)
                                    {
                                        <td>@String.Format("{0:#,0.00}", @data)</td>
                                    }
                                </tr>
                                <tr>
                                    <td><strong>Housing</strong></td>
                                    @foreach (double data in Model.schObj.ListHousing)
                                    {
                                        <td><input class="text-primary" name="housing" type="text" value="@String.Format("{0:#,0}", @data)"></td>
                                    }
                                </tr>
                                <tr>
                                    <td><strong>Parents Charter</strong></td>
                                    @foreach (double data in Model.schObj.ListParentsCharter)
                                    {
                                        <td>@String.Format("{0:#,0.00}", @data)</td>
                                    }
                                </tr>
                                <tr>
                                    <td><strong>P1</strong></td>
                                    @foreach (double data in Model.schObj.ListP1)
                                    {
                                        <td>@String.Format("{0:#,0.00}", @data)</td>
                                    }
                                </tr>
                                <tr>
                                    <td><strong>P2</strong></td>
                                    @foreach (double data in Model.schObj.ListP2)
                                    {
                                        <td>@String.Format("{0:#,0.00}", @data)</td>
                                    }
                                </tr>
                                <tr>
                                    <td><strong>P3</strong></td>
                                    @foreach (double data in Model.schObj.ListP3)
                                    {
                                        <td>@String.Format("{0:#,0.00}", @data)</td>
                                    }
                                </tr>
                                <tr>
                                    <td><strong>P4</strong></td>
                                    @foreach (double data in Model.schObj.ListP4)
                                    {
                                        <td>@String.Format("{0:#,0.00}", @data)</td>
                                    }
                                </tr>
                                <tr>
                                    <td><strong>P5</strong></td>
                                    @foreach (double data in Model.schObj.ListP5)
                                    {
                                        <td>@String.Format("{0:#,0.00}", @data)</td>
                                    }
                                </tr>
                                <tr>
                                    <td><strong>P6</strong></td>
                                    @foreach (double data in Model.schObj.ListP6)
                                    {
                                        <td>@String.Format("{0:#,0.00}", @data)</td>
                                    }
                                </tr>
                                <tr>
                                    <td><strong>P7</strong></td>
                                    @foreach (double data in Model.schObj.ListP7)
                                    {
                                        <td>@String.Format("{0:#,0.00}", @data)</td>
                                    }
                                </tr>
                                <tr>
                                    <td><strong>Total Roll</strong></td>
                                    @foreach (double data in Model.schObj.ListTotalRoll)
                                    {
                                        <td>@String.Format("{0:#,0.00}", @data)</td>
                                    }
                                </tr>
                                <tr>
                                    <td><strong>Max Capacity</strong></td>
                                    @foreach (double data in Model.schObj.ListMaxCap)
                                    {
                                        <td>@String.Format("{0:#,0.00}", @data)</td>
                                    }
                                </tr>
                                <tr>
                                    <td><strong>Total Roll - Funct Work Cap</strong></td>
                                    @foreach (double data in Model.schObj.ListTotRollFunctWCap)
                                    {
                                        <td>@String.Format("{0:#,0.00}", @data)</td>
                                    }
                                </tr>
                                <tr>
                                    <td><strong>Total Roll/Funct Work Cap%</strong></td>
