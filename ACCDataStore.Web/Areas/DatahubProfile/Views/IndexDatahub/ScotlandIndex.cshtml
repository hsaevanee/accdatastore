@model ACCDataStore.Web.Areas.DatahubProfile.ViewModels.Datahub.DatahubViewModel
@section Header {
    <script  src="~/Scripts/jquery.js"></script>
    <script  src="~/Scripts/highcharts.js"></script>
    <script  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDryCUbMmTBoPQ2o0FsBDg6OnvlFsnCU4Q"></script>
    <script  src="~/Scripts/accdatastore/areas/datahubprofile/views/Indexdatahub/ScotlandIndexMain.js"></script>
}
@{
    //Wider Achievement
    ViewBag.Title = "Index";
}

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-8">
                        <h2 style="margin: 15px 0px 15px 0px">Select your area from the map or the dropdown list</h2>
                    </div>
                    <div class="col-md-4">
                        @*<form class="form-inline" action="/DatahubProfile/IndexDatahub/Index" style="margin: 15px 0px 15px 0px; text-align: right">
                            <div style="display: inline-block">
                                <div class="form-group">
                                    <select class="form-control" id="scotland-area">
                                        <option>Select from dropdown list</option>
                                        <option value="Aberdeen">Aberdeen</option>
                                        <option value="Aberdeenshire">Aberdeenshire</option>
                                        <option value="Aberdeenshire">Glasgow</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-default">Submit</button>
                            </div>
                        </form>*@

                        @using (Html.BeginForm("Index", "IndexDatahub", new { area = "DatahubProfile" }))
                        {
                            <div style="display: inline-block">
                                <div class="form-group">
                                        @Html.DropDownListFor(m => m.selectedcouncil, new SelectList(Model.ListCouncilName, "seedcode", "name"), "--- Council---")
                                    <button type="submit" class="btn btn-default">Submit</button>
                                </div>
                                
                            </div>
                        }
                    </div>
                </div>
                <div id="map-canvas" style="width: 100%; height: 500px"></div>
            </div>
        </div>
    <div class="row">
        <div class="col-md-12">
            <h2>Scotland Monthly Particapation</h2>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <tr>
                        <th>Council</th>
                        <th>Participating</th>
                        <th>Not Participating</th>
                        <th>Unknown</th>
                    </tr>
                    @foreach (var data in Model.allCouncilTable)
                    { 
                        <tr>
                            <td>@data.name</td>
                            <td>@Math.Round(data.Participating(), 2)</td>
                            <td>@Math.Round(data.NotParticipating(), 2)</td>
                            <td>@Math.Round(data.Percentage(data.allPupilsInUnknown), 2)</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h2>Scotland Monthly Participation Trend Graph</h2>
            <div id="month-trend-histogram"></div>
        </div>
    </div>
    </div> <!--container-->
</body>