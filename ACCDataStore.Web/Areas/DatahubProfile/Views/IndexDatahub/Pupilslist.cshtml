@model ACCDataStore.Web.Areas.DatahubProfile.ViewModels.Datahub.DatahubViewModel
@section Header {
    <link rel="stylesheet" href="~/Content/accdatastore/areas/DatahubProfile/views/datahub/datahub.css" type="text/css" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.10.7/css/jquery.dataTables.css" type="text/css" />
    <script src="~/Scripts/accdatastore/areas/datahubprofile/views/Indexdatahub/IndexdatahubProfile.js"></script>
    <script type="text/javascript" src="http://code.highcharts.com/modules/exporting.js"></script>
    <script type="text/javascript" src="//cdn.datatables.net/1.10.7/js/jquery.dataTables.min.js"></script>
}
@{
    ViewBag.Title = "Pupilslist";
}

 <div id="main">
     <h2 align="center">@Model.selectedschool.name</h2>
     <table id="datatable" class="display hover">
         <thead>
             @*<tr>
                 <th colspan="9" align="center">@Model.selectedschool.name</th>
             </tr>*@
             <tr>
                 <th colspan="8">@Model.levercategory</th>
                 <th align="left">
                     <a href='@Url.Action("ExportExcel", "IndexDatahub", new {  dataname = "All Clients" })'><button>Export to Excel</button></a>
                 </th>
             </tr>
             <tr>
                 <th>SDS Client Ref</th>
                 <th>Name </th>
                 <th>Age</th>
                 <th>D.O.B</th>
                 <th>Gender</th>
                 <th>School</th>
                 <th>SCN</th>
                 <th>Tel. Number</th>
                 <th></th>
             </tr>
         </thead>
         <tbody>

             @foreach (var item in Model.Listpupils)
             {
                 <tr>
                     <td>@item.SDS_Client_Ref</td>
                     <td>@{var name = item.Forename + " " + item.Surname;} @name</td>
                     <td>@item.Age</td>
                     <td>@item.Date_of_Birth</td>
                     <td>@item.Gender</td>
                     <td>@item.School_Name</td>
                     <td>@item.Scottish_Candidate_Number</td>
                     <td>@item.Telephone_Number</td>
                     <td align="center"><a href='@Url.Action("Getpupilsdetails", "IndexDatahub", new { pupil = item.SDS_Client_Ref })'><button>Full Details</button></a></td>
                 </tr>
             }
         </tbody>
     </table>

     <script type="text/javascript">
    // Put your javascript code here
    $('#datatable').DataTable({
        paging: false,
        "aaSorting": [[1, "asc"]] //order by Name
    });
     </script>


 </div>>
