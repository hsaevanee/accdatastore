@model ACCDataStore.Web.Areas.SchoolProfile.ViewModels.Curriculum.CurriculumViewModel
@section Header {
    <link rel="stylesheet" href="~/Content/accdatastore/areas/nationality/views/nationality/nationality.css" type="text/css" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.10.7/css/jquery.dataTables.css" type="text/css" />
    <script src="~/Scripts/accdatastore/areas/schoolprofile/views/Curriculum/Curriculum.js"></script>
    <script type="text/javascript" src="http://code.highcharts.com/modules/exporting.js"></script>
    <script type="text/javascript" src="//cdn.datatables.net/1.10.7/js/jquery.dataTables.min.js"></script>
}
@{
    ViewBag.Title = "Index";
}

<h2>@Model.selectedschoolname</h2>

<h2>Curriculum for Excellence - Primary School (%pupils)</h2>
@if (Model.IsShowCriteria)
{
    using (Html.BeginForm("Index", "Curriculum", new { area = "SchoolProfile" }))
    {
        <table>
            <tr>
                <th colspan="2">Please select Criteria</th>
            </tr>
            <tr>
                <td colspan="2">Select school name </td>
            </tr>
            <tr>
                <td></td>
                <td>@Html.DropDownListFor(x => x.selectedschoolname, new SelectList(Model.ListSchoolNameData), "---Please Select School---")</td>
                @*<td>@Html.DropDownList("selectSchoolname", new SelectList(Model.ListSchoolNameData, "----Select------"))</td>*@
            </tr>
            <tr>
                <td colspan="2">Select Gender </td>
            </tr>

            @*@foreach (var itemGender in Model.ListGenderCode)
                {
                    if (Model.DicGender.ContainsKey(itemGender))
                    {
                        <tr>
                            <td></td>
                            <td>
                                <input type="checkbox" name="gender" value="@itemGender"
                                       checked="checked" /> @Model.DicGender[itemGender]
                                </td>
                            </tr>
                    }
                }*@
            @foreach (var itemGender in Model.ListGenderCode)
            {
                if (Model.DicGenderWithSelected.ContainsKey(itemGender))
                {
                    <tr>
                        <td></td>
                        <td>
                            <input type="checkbox" name="gender" value="@itemGender"
                                   @Model.DicGenderWithSelected[itemGender][1] /> @Model.DicGenderWithSelected[itemGender][0]
                            </td>
                        </tr>
                }
            }            
            @{
                var check = "";
                if (Model.ListSelectedGender != null)
                {
                    if (Model.ListSelectedGender.Count == 3)
                    {
                        check = "checked";
                    }

                }
                else
                {
                    check = "checked";
                }
            }
            <tr>
                <td></td>
                <td>
                    <input type="checkbox" name="CheckGenderAll"
                           value="ALL" id="CheckGenderAll" @check />CheckALL
                </td>

            </tr>
            <tr>
                <td colspan="2">Select Subjects </td>
            </tr>
            @{
                foreach (var itemSubject in Model.ListSubjects)
                {
                    check = "";
                    if (Model.ListSelectedStdStage != null)
                    {
                        if (Model.ListSelectedStdStage.Contains(itemSubject))
                        {
                            check = "checked";
                        }

                    }
                    else
                    {
                        check = "checked";
                    }

                    <tr>
                        <td></td>
                        <td>
                            <input type="checkbox" name="subject" value="@itemSubject"
                                   @check/> @itemSubject
                            </td>
                        </tr>
                }
            }
            @*@foreach (var itemStage in Model.ListStageCode)
            {
                <tr>
                    <td></td>
                    <td>
                        <input type="checkbox" name="stages" value="@itemStage"
                               checked="checked" /> @itemStage
                        </td>
                    </tr>
            }*@

            @{
                check = "";
                if (Model.ListSelectedStdStage != null)
                {
                    if (Model.ListSelectedStdStage.Count == 7)
                    {
                        check = "checked";
                    }

                }
                else
                {
                    check = "checked";
                }
            }


           <tr>
                <td></td>
                <td>
                    <input type="checkbox" name="CheckSubjectAll"
                           value="ALL" id="CheckSubjectAll" @check />CheckALL
                </td>

            </tr>
            <tr>
                <td>
                    <button id="buttonGetData" type="submit">
                        Get Data
                    </button>
                </td>
            </tr>


        </table>
    }
}
@if (Model.IsShowData)
{
    <br />
    <form id="StdStageData">
        <table id="datatable" class="display">
            <thead>
                <tr>                    
                    <th>Stage</th>
                    <th>Gender</th>
                        @foreach (var selection in Model.ListSkills)
                        {
                           <th>@selection</th>
                        }
                    <th>Select data </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var itemdata in Model.ListLiteracydata)
                {

                    <tr>
                       <td>@itemdata.stage</td>
                       <td>@Model.DicGender[itemdata.gender]</td>
                       <td>@String.Format("{0:#,0.00}",@itemdata.earlydeveloping)</td>
                        <td>@String.Format("{0:#,0.00}",@itemdata.earlyconsolidating)</td>
                        <td>@String.Format("{0:#,0.00}",@itemdata.earlysecure)</td>
                        <td>@String.Format("{0:#,0.00}",@itemdata.firstdeveloping)</td>
                        <td>@String.Format("{0:#,0.00}",@itemdata.firstconsolidating)</td>
                        <td>@String.Format("{0:#,0.00}",@itemdata.firstsecure)</td>
                        <td>@String.Format("{0:#,0.00}",@itemdata.seconddeveloping)</td>
                        <td>@String.Format("{0:#,0.00}",@itemdata.secondconsolidating)</td>
                        <td>@String.Format("{0:#,0.00}",@itemdata.secondsecure)</td>
                        <td>@String.Format("{0:#,0.00}",@itemdata.blank)</td>
                        <td>@String.Format("{0:#,0.00}",@itemdata.grandtotal)</td>

                       <td align="center"><input type='checkbox' name='CheckDataitem' value="@itemdata.stage" checked="checked" /></td>
                    </tr>
                }
            </tbody>
            <tr>
                @*@{var colspan = (@Model.ListSelectedGender.Count * 2) + 1;}*@
                <td colspan="13"></td>
                <td align="center"><input type='checkbox' name='CheckDataitemAll' id='CheckDataitemAll' value="ALL" checked="checked" />CheckALL</td>
            </tr>
            <tr><td><button onclick='myFunctionBar()'><label>Bar Chart</label></button></td></tr>
            <tr><td><button onclick='myFunctionColumn()'><label>Column Chart</label></button></td></tr>
            <tr><td>@Html.ActionLink("Export Excel", "ExportExcel", "StudentStage", new { Area = "SchoolProfile", sSchoolName = "" }, null)</td></tr>
        </table>
        <script type="text/javascript">
            // Put your javascript code here
            $('#datatable').DataTable({
                paging: false
            });
        </script>

        <div id="divChartContainer"></div>

        <br>
    </form>
}
