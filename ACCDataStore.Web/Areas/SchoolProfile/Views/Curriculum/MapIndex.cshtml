@model ACCDataStore.Web.Areas.SchoolProfile.ViewModels.Curriculum.CurriculumViewModel
@section Header {
    <link rel="stylesheet" href="~/Content/accdatastore/areas/nationality/views/nationality/nationality.css" type="text/css" />
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&signed_in=true"></script>
    <script src="~/Scripts/accdatastore/areas/schoolprofile/views/Curriculum/MapIndex.js"></script>
}
@{
    ViewBag.Title = "Curriculum MapIndex";
}



<div id="main" style="width: 1280px;margin:10px 0px">
    <table>
        <tr>
            <th colspan=" 2">Please select Criteria</th>
        </tr>
        <tr>
            <td width="10%">Select Subject </td>
            <td>@Html.DropDownListFor(x => x.selectedschoolname, new SelectList(Model.ListSubjects), "---Please Select Subject---")</td>
        </tr>
    </table>
</div>

<br />
@*<div id="map-canvas" style="width: 1280px; height: 720px;"></div>*@
<div id="map-canvas" style="width: 1280px; height: 576px;" ></div>

<div id="content-windows" style="position:center; width: 90%">
    <h1><span id="area-info"></span></h1>
    <div id="divinformationContainer" style="position:center; width: 90%; height: 100%; "></div>
    <br />
    <div id="divChartContainer" style="position:center; width: 90%;  height: 100%;"></div>
</div>

<div id="maincontrolbox">
    <label style="font-family: 'Open Sans'; font-weight: bold;">Layers</label>
    <div id="mapcontrolbox"></div>
</div>

<article id="popup-information"></article>
<div id="content-windows-mouse-over" style="position: absolute; display:none; background-color: lightgray;"></div>
<div id="divSpinner" class="modal" style="display: none;"></div>
