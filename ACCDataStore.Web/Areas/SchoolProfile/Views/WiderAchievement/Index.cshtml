@model ACCDataStore.Web.Areas.SchoolProfile.ViewModels.WiderAchievement.WiderAchievementViewModel
@section Header {
    <link rel="stylesheet" href="~/Content/accdatastore/areas/nationality/views/nationality/nationality.css" type="text/css" />
    <script src="~/Scripts/accdatastore/areas/schoolprofile/views/WiderAchievement/IndexWiderAchievement.js"></script>
    <script type="text/javascript" src="http://code.highcharts.com/modules/exporting.js"></script>
}
@{
    ViewBag.Title = "Index";
}
<div id="main">
    <h2>Wider Achievement Framework Data 2013 - 2015</h2>
    @using (Html.BeginForm("index", "WiderAchievement", new { area = "SchoolProfile"} ))
    {
        <table>
            <thead>
                <tr>
                    <th colspan="3">Please Select School</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td width="200">School Name</td>
                    <td>@Html.DropDownListFor(m => m.selectedschoolname, new SelectList(Model.Listschoolname, "seedcode", "name"), "---Please Select School---")</td>
                    <td width="200"><input type="submit" name="schoolsubmitButton" value="Search" /></td>
                </tr>
                <tr>
                    <td width="200">Award</td>
                    <td>@Html.DropDownListFor(m => m.selectedawardname, new SelectList(Model.Listawardname), "---Please Select Award---")</td>
                    <td width="200"><input type="submit" name="awardsubmitButton" value="Search" /></td>
                </tr>
            </tbody>
        </table>
    }

    <br>
    @if (Model.Listresults != null && Model.Listresults.Count()!=0)
    {
        <table border="1" cellpadding="5">
        <thead>
            <tr>
                <th colspan="3"></th>
                <th colspan="4">Citywide Totals</th>
            </tr>
            <tr>
                <th>School</th>
                <th>Age Range</th>
                <th>Award</th>
                <th>Gender</th>
                <th>2013-2014</th>
                <th>2014-2015</th>
                <th>2015-2016</th>
            </tr>
        </thead>

                <tbody>
                    @foreach (var item in Model.Listresults)
                    {
                        <tr>
                            <td>@item.schoolname</td>
                            <td>@item.age_range</td>
                            <td>@item.awardname</td>
                            <td>@item.gender</td>
                            <td>@item.award2013</td>
                            <td>@item.award2014</td>
                            <td>@item.award2015</td>
                        </tr>
                    }
                </tbody>   
    </table>
        }
  
</div>
